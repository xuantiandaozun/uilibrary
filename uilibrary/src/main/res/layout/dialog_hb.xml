<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/re_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/red_background">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_head"
            android:layout_width="@dimen/material_40"
            android:layout_height="@dimen/material_40"
            app:roundAsCircle="true"
            android:layout_marginTop="@dimen/material_20"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/message"
            android:layout_below="@+id/iv_user_head"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手慢无!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_40"
            android:textColor="#FFFFCC00"
            android:textSize="@dimen/material_font_18"
            android:layout_below="@+id/message"/>
    </RelativeLayout>
</RelativeLayout>